<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cc.yfree.yangf.everyday.HomeActivity"
    tools:showIn="@layout/activity_home"
    android:background="#E4E4E4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E4E4E4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:id="@+id/home_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:elevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/nextTodo_img"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/todo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:textColor="@color/primary_text"
                                android:textSize="23sp"
                                android:text="去逸夫楼上课，课后领快递"/>
                            <TextView
                                android:id="@+id/time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:textColor="@color/secondry_text"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:textSize="16sp"
                                android:text="2016年10月8日"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/mdivider"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:orientation="horizontal">
                                <carbon.widget.Button
                                    android:id="@+id/end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="36dp"
                                    android:textColor="@color/mdl_cardview_normal_button_color"
                                    android:textSize="14sp"
                                    android:paddingLeft="@dimen/carbon_padding"
                                    android:paddingRight="@dimen/carbon_padding"
                                    android:text="完成"
                                    android:background="@android:color/transparent"
                                    android:clickable="true"
                                    app:carbon_cornerRadius="2dp"
                                    app:carbon_rippleColor="@color/mdl_cardview_normal_button_ripple_color"
                                    app:carbon_elevation="@dimen/carbon_elevationLow"
                                    app:carbon_touchMarginTop="6dp"
                                    app:carbon_touchMarginBottom="6dp"
                                    app:carbon_touchMarginLeft="100dp"
                                    app:carbon_touchMarginRight="100dp"
                                    app:carbon_textStyle="bold"
                                    style="@style/carbon_Button"/>
                                <carbon.widget.Button
                                    android:id="@+id/late"
                                    android:layout_width="wrap_content"
                                    android:layout_height="36dp"
                                    android:textColor="@color/mdl_cardview_highlight_button_color"
                                    android:textSize="14sp"
                                    android:text="延后"
                                    android:paddingLeft="@dimen/carbon_padding"
                                    android:paddingRight="@dimen/carbon_padding"
                                    android:background="@android:color/transparent"
                                    app:carbon_cornerRadius="2dp"
                                    app:carbon_rippleColor="@color/mdl_cardview_normal_button_ripple_color"
                                    app:carbon_elevation="@dimen/carbon_elevationLow"
                                    app:carbon_touchMarginTop="6dp"
                                    app:carbon_touchMarginBottom="6dp"
                                    app:carbon_touchMarginLeft="100dp"
                                    app:carbon_touchMarginRight="100dp"
                                    app:carbon_textStyle="bold"
                                    style="@style/carbon_Button"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E4E4E4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingRight="4dp"
                android:paddingLeft="4dp">
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_left2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="2dp"
                    android:layout_marginBottom="8dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="2dp"
                    app:contentPadding="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingRight="16dp">
                                <com.mikepenz.iconics.view.IconicsImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    app:iiv_color="#2196F3"
                                    app:iiv_icon="cmd-weather-pouring" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="最近一周都有大暴雨"
                                    android:textColor="@color/primary_text"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingRight="16dp">

                                <com.mikepenz.iconics.view.IconicsImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    app:iiv_color="#2196F3"
                                    app:iiv_icon="typ-waves"
                                    android:id="@+id/iconicsImageView2" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="广场西路积水"
                                    android:textColor="@color/primary_text"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingRight="16dp">

                                <com.mikepenz.iconics.view.IconicsImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    app:iiv_color="#F44336"
                                    app:iiv_icon="cmd-alert-circle-outline"
                                    android:id="@+id/iconicsImageView4" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="14号线路车祸拥堵，请绕行"
                                    android:textColor="@color/primary_text"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingRight="16dp">
                                <com.mikepenz.iconics.view.IconicsImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    app:iiv_color="#4CAF50"
                                    app:iiv_icon="cmd-beach" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="微风、紫外线弱，上午9:00的阳光足够迷人"
                                    android:textColor="@color/primary_text"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingRight="16dp">
                                <com.mikepenz.iconics.view.IconicsImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    app:iiv_color="#4CAF50"
                                    app:iiv_icon="cmd-bike" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="天朗、气清，适合骑行的好日子"
                                    android:textColor="@color/primary_text"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_right2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="300dp"
                    app:cardBackgroundColor="#607D8B"
                    app:cardCornerRadius="2dp"
                    android:layout_marginBottom="8dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="快速记录"
                                android:textColor="@color/white"
                                android:textSize="14sp"/>
                            <com.mikepenz.iconics.view.IconicsImageView
                                android:id="@+id/addItem"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="8dp"
                                app:iiv_color="@color/white"
                                app:iiv_icon="cmd-plus" />
                            <com.mikepenz.iconics.view.IconicsImageView
                                android:id="@+id/close"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_toLeftOf="@+id/addItem"
                                android:layout_marginRight="32dp"
                                app:iiv_color="@color/white"
                                app:iiv_icon="cmd-close" />
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider2"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="8dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingRight="16dp"
                            android:paddingLeft="16dp"
                            android:paddingBottom="2dp">

                            <android.support.v7.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/recycler_view_list"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>



